<p style="color: green"><%= notice %></p>

<h1>Lista de Tarefas</h1>

<div class="new_task">
  <%= link_to "Criar nova tarefa", new_task_path %>
</div>

<div>
  <% @task.each do |task| %>
    <%= render task %>
    <div class="showtask">
      <%= link_to "Mostrar tarefa", task %>
    </div>
    
  <% end %>
</div>



